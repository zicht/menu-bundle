{
    "name": "zicht/menu-bundle",
    "description": "Menu utilities for Symfony",
    "type": "symfony-bundle",
    "repositories": [],
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^5.6",
        "gedmo/doctrine-extensions": "^2.3",
        "zicht/framework-extra-bundle": "^4.1 || ^5"
    },
    "suggest": {
        "zicht/admin-bundle": "To integrate with Sonata Admin",
        "zicht/url-bundle": "To leverage aliasing based on menu structure"
    },
    "require-dev": {
        "phpunit/phpunit": "^4",
        "symfony/symfony": "^2"
    },
    "autoload": {
        "psr-0": {
            "": [
                "src/",
                "tests/"
            ]
        }
    },
    "minimum-stability": "stable",
    "license": "MIT"
}
