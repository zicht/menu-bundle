{
    "name": "zicht/menu-bundle",
    "description": "Menu utilities for Symfony",
    "type": "symfony-bundle",
    "authors": [
        {
            "name": "Zicht online",
            "email": "info@zicht.nl"
        }
    ],
    "require": {
        "php": "^7.0",
        "gedmo/doctrine-extensions": "^2.3",
        "symfony/symfony": "^3.4",
        "zicht/framework-extra-bundle": "^8.0"
    },
    "suggest": {
        "zicht/admin-bundle": "To integrate with Sonata Admin",
        "zicht/url-bundle": "To leverage aliasing based on menu structure"
    },
    "require-dev": {
        "phpunit/phpunit": "^4"
    },
    "autoload": {
        "psr-4": {
            "Zicht\\Bundle\\MenuBundle\\": [
                "src/Zicht/Bundle/MenuBundle/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZichtTest\\Bundle\\MenuBundle\\": [
                "tests/ZichtTest/Bundle/MenuBundle/"
            ]
        }
    },
    "minimum-stability": "stable",
    "license": "MIT"
}
